<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>

<!-- Content for the Add page -->
<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">
            <h1><%= title %></h1>

            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Survey Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the Survey Name"
                    name="name" 
                    value="<%= survey.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="typeTextField">Survey Type</label>
                    <input type="text" class="form-control"
                    id="typeTextField"
                    placeholder="Enter the Survey Type"
                    name="type" 
                    value="<%= survey.type %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="sdateTextField">Start Date</label>
                    <input type="text" class="form-control"
                    id="sdateTextField"
                    placeholder="Enter the Survey's Start Date"
                    name="sdate" 
                    value="<%= survey.sdate %>"
                    required>
                </div>
                
                <div class="form-group">
                    <label for="edateTextField">End Date</label>
                    <input type="text" class="form-control"
                    id="edateTextField"
                    placeholder="Enter the Survey's End Date"
                    name="edate" 
                    value="<%= survey.edate %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="descriptionTextArea">Description</label>
                    <textarea type="text" class="form-control"
                    id="descriptionTextArea"
                    placeholder="Enter the a brief description of the survey"
                    name="description" 
                    required>
                    <%= survey.description %>
                    </textarea>
                </div>

                <button class="btn btn-primary" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/survey-list" class="btn btn-warning">
                        <i class="fas fa-undo"></i> Cancel</a>

            </form>
        </div>

    </div>
</div>


<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>