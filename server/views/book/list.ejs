<%- include ../partials/header.ejs %>

<%- include ../partials/main_nav.ejs %>
<style>
.table {
    margin: 0 auto;
    width: 80%;
}
</style>

  <!-- Main Content -->
  <main class="container-fluid">
    <div class="row">
        <div class="col-md-8">
            <h1>Create a Survey</h1>

            <% if(typeof displayName == 'string' && displayName) { %>
                <a href="/book-list/add" class="btn btn-primary" role="button">
                <i class="fas fa-plus-circle"></i> Add a Survey</a>
            <% } %>
            <br>
           
                <table class="table table-bordered table-striped table-hover  mx-auto w-auto">
                <!-- Header Row-->
                <tr class="d-flex">
                    <% if(typeof displayName == 'string' && displayName) { %>
                        <th class="text-center col-3">Survey Name</th>
                        <th class="text-center col-3">Survey Type</th>
                        <th class="text-center col-3">Start Date</th>
                        <th class="text-center col-3">End Date</th>
                        <th class="col-4">Description</th>
                        <th class="text-center col-1"></th>
                        <th class="text-center col-1"></th>
                    <% } else { %>
                        <th class="text-center col-3">Survey Name</th>
                        <th class="text-center col-3">Survey Type</th>
                        <th class="text-center col-3">Start Date</th>
                        <th class="text-center col-3">End Date</th>
                        <th class="col-4">Description</th>
                    <% } %>
                </tr>

                <!-- Repeatable Template Row -->

                <% for(let count = 0; count <BookList.length; count++) { %>
                    <tr class="d-flex">
                        <% if(typeof displayName == 'string' && displayName) { %>
                            <td class="text-center col-3"><%= BookList[count].name %></td>
                            <td class="text-center col-3"><%= BookList[count].type %></td>
                            <td class="text-center col-3"><%= BookList[count].sdate %></td>
                            <td class="text-center col-3"><%= BookList[count].edate %></td>     
                            <td class="col-4"><%= BookList[count].description %></td>       
                            <td class="text-center col-1">
                                <a href="/book-list/edit/<%= BookList[count]._id %>" class="btn btn-primary btn-sm">
                                <i class="fas fa-pencil-alt"></i> Edit</a>
                            </td>
                            <td class="text-center col-1">
                                <a href="/book-list/delete/<%= BookList[count]._id %>" class="btn btn-danger btn-sm">
                                <i class="fas fa-trash-alt"></i> Delete</a>
                            </td>
                         <% } else { %>
                            <td class="text-center col-3"><%= BookList[count].name %></td>
                            <td class="text-center col-3"><%= BookList[count].type %></td>
                            <td class="text-center col-3"><%= BookList[count].sdate %></td>
                            <td class="text-center col-3"><%= BookList[count].edate %></td>     
                            <td class="col-4"><%= BookList[count].description %></td>     
                         <% } %>
                    </tr>
                <% } %>
            </table>
            
        </div>
    </div>
  </main>
  
<%- include ../partials/bottom_nav.ejs %>  

<%- include ../partials/footer.ejs %>
  





